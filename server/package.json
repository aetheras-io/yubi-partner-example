{
  "name": "yubi-partner-example",
  "version": "1.0.0",
  "description": "Yubi Integration Reference",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/dt665m/yubi-partner-example",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "yarn build && node build/main/index.js",
    "dev-web": "cd ../website && PORT=3002 yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn watch:build\" \"nodemon -q --watch build build/main/index.js\" \"yarn dev-web\"",
    "dev-server": "concurrently --kill-others-on-fail \"yarn watch:build\" \"nodemon -q --watch build build/main/index.js\"",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.json -w"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "mkdirp": "^1.0.4",
    "sha3": "^2.1.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.24",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "concurrently": "^5.3.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
